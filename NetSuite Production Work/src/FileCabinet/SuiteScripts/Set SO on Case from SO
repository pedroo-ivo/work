/**
 * This is supposed to connect a Sales Order to a Case when the SO is created.
 */
function afterSubmit(type) {
	if (type = 'create') {
  var soid 	= nlapiGetRecordId(),
	  caseid 	= nlapiGetFieldValue('custbody_nx_case');
nlapiLogExecution('debug', 'values', 'SO : ' + soid + ' Case : ' + caseid);
  // Only link to SO - if SO exist and there is no Parent to the Asset Quote exists, any type.  Type removed from afterSubmit()
  if (caseid) nlapiSubmitField('supportcase', caseid, 'custevent_nx_case_transaction', soid)
}
}