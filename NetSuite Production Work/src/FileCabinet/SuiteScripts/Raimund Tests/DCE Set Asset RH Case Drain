/**
 * when a RH Case Drain amount is created/edit, update its asset record
 */
function afterSubmit(type) {
  if (type == 'create' || type == 'edit') {
    var assetId = nlapiGetFieldValue('custrecord_wasr_asset');
    var RHCaseDrain = nlapiGetFieldValue('custrecord_wasr_rhcase');
    // Only link to SO - if transaction exist of any type.
    if (assetId && RHCaseDrain) nlapiSubmitField('customrecord_nx_asset', assetId, 'custrecord_dce_latest_case_drain_rh', RHCaseDrain);
  }
}